<swiper duration="1000" vertical="true" style='height: {{height}}px;'>

  <swiper-item>
    <view class='page' style='height: {{height}}px' wx:if="{{!showWaiter}}">
      <div class="space">

        <div class="stars">
          <div class="star"></div>
          <div class="star pink"></div>
          <div class="star blue"></div>
          <div class="star yellow"></div>
          <div class="star pink2"></div>
          <div class="star blue2"></div>
          <div class="star yellow2"></div>
        </div>
      </div>
      <!--index.wxml-->
      <view class="doommview">
        <block wx:for="{{doommData}}" wx:key="id">
          <view wx:if="{{item.id%2==0}}" class="aon" style="animation: first {{30}}s ease;top:{{item.top}}%;color:{{item.color}};animation-fill-mode:none;">
            <image class='avatar' src='{{item.avatar}}'></image>
            <view class='wish'>{{item.text}}</view>
          </view>
          <view wx:else class="aon" style="animation: first {{30}}s ease-out;top:{{item.top}}%;color:{{item.color}};animation-fill-mode:none;">
            <image class='avatar' src='{{item.avatar}}'></image>
            <view class='wish'>{{item.text}}</view>
          </view>
        </block>
      </view>


      <view class='body' style='{{height==812?"margin-top:320rpx;height:842rpx":(height>700?"margin-top:205rpx;height:781rpx":"margin-top:150rpx;height:781rpx")}};'>

        <view class='timer' style='{{height==812?" bottom: 593rpx;":(height>700?" bottom: 541rpx;":"bottom: 541rpx;")}};'>
          <view>开奖倒计时：{{countDownList[0].day}}天{{countDownList[0].hou}}时{{countDownList[0].min}}分{{countDownList[0].sec}}秒</view>
        </view>

        <view class='body-content'>
          <view class='body-content-top'>许下你的心愿1月x日 12:00北美二手社
          </view>
          <view class='body-content-middle'>将抽取1位用户来实现您的心愿并且</view>
          <view class='body-content-bottom'>随机抽取
            <text>100个人许下的心愿</text>送给您</view>
        </view>
        <block wx:if="{{login}}">
          <view class='body-action' bindtap="goPublish">许下心愿</view>
        </block>
        <block wx:else>
          <button class='body-action' open-type='getUserInfo' bindtap="bindGetUserInfo">许下心愿</button>
        </block>

      </view>

      <view class='total-num' style='{{height==812?" bottom: 285rpx;":(height>700?" bottom: 250rpx;":"bottom: 240rpx;")}};'>
        {{totalNum}}人已许愿
      </view>

      <view class='bottom_action' style='{{height==812?"bottom: 150rpx;":"bottom: 130rpx;"}};'>
        <view class='action'>
        </view>
      </view>

      <view class='bottom-action-content' style='{{height==812?"bottom: 162rpx;":"bottom: 142rpx;"}};'>
        <view class='action-content'>

          <block wx:if="{{login}}">
            <view class='action-left' bindtap='goPublish'>
              <image src='/images/left.png'></image>
              <view class='actionTxt'>许下心愿</view>
            </view>
          </block>
          <block wx:else>
            <view class='action-left'>
              <image src='/images/left.png'></image>
              <view class='actionTxt'>许下心愿</view>
            </view>
          </block>



          <view class='action-middle' bindtap='showCredit'>
            <image src='/images/middle.png'></image>
            <view class='actionTxt'>获取抽奖凭证</view>
          </view>
          <view class='action-right' bindtap='result'>
            <image src='/images/right.png'></image>
            <view class='actionTxt'>开奖结果</view>
          </view>

        </view>
      </view>
      <view class='bottom'>
        <view class='rule'>
          <view>活动规则</view>
          <image class='down' src="/images/gif004.gif"></image>
        </view>

      </view>
      <view class="mask" catchtouchmove="preventTouchMove" wx:if="{{showModal}}"></view>

      <view class="modalDlg" wx:if="{{showModal}}">
        <image src="/figures/logo-smile.png" />
        <text>欢迎来到模态对话框~</text>
        <button bindtap="go">点我可以关掉对话框</button>
      </view>

      <button wx:if="{{showModal}}" bindtap="submit">点我弹窗</button>
    </view>

  </swiper-item>

  <swiper-item>
    <view class="rulePage" style='width:100%;margin: 0;height:{{height}}px;background-repeat: no-repeat;background-size: 100% 100%;'>

      <image class='edit' src="/images/gif015.gif" bindtap='showWaiter'></image>
    </view>
  </swiper-item>

</swiper>